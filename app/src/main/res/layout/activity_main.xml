<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.king.myweb.MainActivity">
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:text="账号"
        android:textSize="50px"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_passwd"
        android:layout_width="wrap_content"
        android:text="密码"
        android:textSize="50px"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="160dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/tx_login"
        android:layout_width="match_parent"
        android:maxLength="16"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_login"
        android:inputType="number"
        android:layout_height="wrap_content"
        />
    <!--android:inputType="numberPassword"-->
    <EditText
        android:id="@+id/tx_passwd"
        android:layout_width="match_parent"
        android:maxLength="20"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="10dp"
        android:inputType="textPassword"
        android:layout_toRightOf="@+id/tv_passwd"
        android:layout_height="wrap_content"
        />

    <CheckBox
        android:id="@+id/checkbox"
        android:text="记住密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx_passwd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btn_login"
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
